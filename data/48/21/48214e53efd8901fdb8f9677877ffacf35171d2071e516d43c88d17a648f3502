                    {'src': '/oscar-static/js/app-es5-bundle-cf6e166a2c.js', 'async': false, 'module': false},
                    {'src': '/oscar-static/js/app-es6-bundle-9f6c8ad440.js', 'async': false, 'module': true}
                
                
                
